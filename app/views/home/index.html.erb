<div class="row">
  <div class="slideshow-wrapper">
    <div class="preloader"></div>
    <ul data-orbit>
      <li>
        <img src="http://placekitten.com/g/1050/500" />
        <div class="orbit-caption">Amazing</div>
      </li>
      <li>
        <img src="http://placekitten.com/g/1050/500" />
        <div class="orbit-caption">Beautiful</div>
      </li>
      <li>
        <img src="http://placekitten.com/g/1050/500" />
        <div class="orbit-caption">Pretty</div>
      </li>
    </ul>
  </div>
</div>
<div class="row">
  <div class="large-4 columns panel">
    <% if @featured %>
      <h4><%= @featured.title %></h4>
      <p>
        <%= @featured.body.truncate(275) %>
      </p>
    <% end %>
  </div>
  <div class="large-7 large-offset-1 columns panel">
    <div class="row">
      <div class="large-8 columns"><img src="http://placekitten.com/g/500/300"></div>
      <div class="large-4 columns">
        <h4>New Store Item</h4>
      </div>
    </div>
  </div>
</div>

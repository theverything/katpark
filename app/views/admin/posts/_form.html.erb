<%= form_for [:admin, @post] do |f| %>
  <%= f.label :title, "Title" %><br>
  <%= f.text_field :title %>
  <%= f.label :body, "Body" %><br>
  <%= f.text_area :body %>
  <%= f.label :featured, "Featured" %>
  <%= f.check_box :featured %><br>
  <%= f.submit :disable_with => 'Create Posting...' %>
<% end %>
